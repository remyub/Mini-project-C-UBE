1)

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void comptecaractere(char* phrase, int n){
    fgets(phrase, n, stdin);
    int p=strlen(phrase);
    printf("Le nombre de caractère dans la phrase entrée est %d \n",p-1);
}

int main(){
    int n=100;
    char phrase[n];
    printf("Saisir une phrase : \n");
    comptecaractere(phrase, n);
    return 0;
}

2)
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void comptevoyelles(char* phrase, int n){
    fgets(phrase, n, stdin);
    int p=strlen(phrase);
    int v=0;
    char voy[]="aAeEiIoOuUyY";
    for(int i=0; i<p; i++){
        for(int j=0; j<12; j++){
            if(phrase[i]==voy[j]){
                v=v+1;
            }
        }  
    }
    printf("Le nombre de voyelles dans la phrase entrée est %d \n",v);
}

int main(){
    int n=100;
    char phrase[n];
    printf("Saisir une phrase : \n");
    comptevoyelles(phrase, n);
    return 0;
}

3) 

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void palindrome(char* phrase, int n){
    fgets(phrase, n, stdin);
    int p=strlen(phrase);
    if (p>0 && phrase[p-1]=='\n') {
        phrase[p-1]='\0';
        p--;
    }
    int k=0;
    for(int i=0; i<p; i++){
        char c=phrase[i];
        if(c>='A' && c<='Z'){
            c=c+32;
        }
        if(c!=' '){
            phrase[k]=c; 
            k++;
        }
    } 
    phrase[k]='\0';
    p=k;
    int a=0;
    for (int i=0; i<p/2; i++){
        if (phrase[i] !=phrase[p-1-i]){
            a=1;
        }
    }
    if (a==0){
        printf("La phrase est un palindrome \n");
    }
    else{
        printf("La phrase n'est pas un palindrome \n");
    }
}
int main(){
    int n=100;
    char phrase[n];
    printf("Saisir une phrase : \n");
    palindrome(phrase, n);
    return 0;
}

