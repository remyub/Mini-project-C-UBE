1)

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void comptecaractere(char* phrase, int n){
    fgets(phrase, n, stdin);
    int p=strlen(phrase);
    printf("Le nombre de caractère dans la phrase entrée est %d \n",p-1);
}

int main(){
    int n=100;
    char phrase[n];
    printf("Saisir une phrase : \n");
    comptecaractere(phrase, n);
    return 0;
}

2)
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void comptevoyelles(char* phrase, int n){
    fgets(phrase, n, stdin);
    int p=strlen(phrase);
    int v=0;
    char voy[]="aAeEiIoOuUyY";
    for(int i=0; i<p; i++){
        for(int j=0; j<12; j++){
            if(phrase[i]==voy[j]){
                v=v+1;
            }
        }  
    }
    printf("Le nombre de voyelles dans la phrase entrée est %d \n",v);
}

int main(){
    int n=100;
    char phrase[n];
    printf("Saisir une phrase : \n");
    comptevoyelles(phrase, n);
    return 0;
}


